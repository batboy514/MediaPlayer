<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="Theme.AppBaseTheme" parent="android:Theme.Holo">
        <!-- API 14 theme customizations can go here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabStyle">@style/example_ActionBarTabStyle</item>
    </style>

        <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#000000</item>
        <item name="android:backgroundStacked">@color/stacked_black</item>
        <item name="android:backgroundSplit">@color/accent_black</item>
    </style>
    
<style name="example_ActionBarTabStyle" parent="@android:style/Widget.Holo.ActionBar.TabView">
<item name="android:background">@drawable/tab_indicator_ab_example</item>
    <item name="android:textColor">#FFFFFF</item>
</style>

<style name="ActionBarTabBarStyle" parent="@android:style/Widget.Holo.ActionBar.TabBar">
    <item name="android:background">#000000</item>
    <item name="android:textColor">#FFFFFF</item>
</style>

</resources>